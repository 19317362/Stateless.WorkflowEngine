@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Stateless.WorkflowEngine.WebConsole.ViewModels.User.UserListViewModel>
@using Stateless.WorkflowEngine.WebConsole.Navigation
@using Nancy.Security
@using Stateless.WorkflowEngine.WebConsole.BLL.Utils
@using System.Linq
@using Stateless.WorkflowEngine.WebConsole.BLL.Security
@{
    IUserIdentity currentUser = ViewBag.CurrentUser;
}
@if (Model.Users.Count > 0)
{
    <table class="table table-striped table-hover table-bordered font90">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Users)
            {
                <tr>
                    <td>@r.UserName</td>
                    <td>@r.Role</td>
                    <td class="action" width="100">
                        @*
                        <a class="btn btn-success disabled" data-toggle="tooltip" href="#" title="" data-original-title="Zoom">
                            <i class="fa fa-search-plus"></i>
                        </a>
                        <a class="btn btn-info disabled" href="#">
                            <i class="fa fa-edit"></i>
                        </a>
                        *@
                        @if (DisplayUtils.HasClaim(currentUser, Claims.UserDelete))
                        {
                            <a class="btn btn-danger disabled" href="#">
                                <i class="fa fa-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
